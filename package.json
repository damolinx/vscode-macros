{
  "name": "damolinx-macros",
  "displayName": "Macros for VS Code",
  "description": "Create JavaScript/TypeScript macros to automate tasks or prototype extension features — write them yourself or let the AI integration generate and execute them for you.",
  "version": "0.6.0",
  "publisher": "damolinx",
  "icon": "resources/images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/damolinx/vscode-macros"
  },
  "bugs": {
    "url": "https://github.com/damolinx/vscode-macros/issues"
  },
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "automation",
    "commands",
    "javascript",
    "macro",
    "macros",
    "productivity",
    "scripting",
    "typescript"
  ],
  "extensionKind": [
    "workspace",
    "ui"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "colors": [
      {
        "id": "macros.general",
        "description": "Color for general icons",
        "defaults": {
          "dark": "#6d8086",
          "light": "#6d8086",
          "highContrast": "#b0b0b0"
        }
      },
      {
        "id": "macros.js",
        "description": "Color for JavaScript icons",
        "defaults": {
          "dark": "#d4b830",
          "light": "#d4b830",
          "highContrast": "#ffea00"
        }
      },
      {
        "id": "macros.ts",
        "description": "Color for TypeScript icons",
        "defaults": {
          "dark": "#6fb0d4",
          "light": "#6fb0d4",
          "highContrast": "#00bfff"
        }
      }
    ],
    "commands": [
      {
        "command": "macros.copy.file",
        "title": "Copy",
        "category": "Macros",
        "enablement": "focusedView == macros.macroExplorer"
      },
      {
        "command": "macros.copy.name",
        "title": "Copy Name",
        "category": "Macros",
        "enablement": "focusedView == macros.macroExplorer"
      },
      {
        "command": "macros.copy.path",
        "title": "Copy Path",
        "category": "Macros",
        "enablement": "focusedView == macros.macroExplorer"
      },
      {
        "command": "macros.createCursorRules",
        "title": "Macros: Create Cursor Rules",
        "enablement": "workspaceFolderCount > 0 && env.appHost == cursor"
      },
      {
        "command": "macros.debug",
        "title": "Debug Macro",
        "category": "Macros",
        "enablement": "!inDebugMode && !macros:inDebugMode",
        "icon": "$(debug-alt)"
      },
      {
        "command": "macros.debug.activeEditor",
        "title": "Debug Active Editor as Macro",
        "category": "Macros",
        "enablement": "!inDebugMode && !macros:inDebugMode && resourceScheme == file && macros:supportedFeatureExt",
        "icon": "$(debug-alt)"
      },
      {
        "command": "macros.delete.macroOrMacroLibrary",
        "title": "Delete",
        "category": "Macros",
        "enablement": "focusedView == macros.macroExplorer"
      },
      {
        "command": "macros.delete.startupMacro",
        "title": "Remove as Startup Macro",
        "category": "Macros",
        "icon": "$(settings-remove)"
      },
      {
        "command": "macros.explorer.refresh",
        "title": "Refresh Macro Explorer",
        "category": "Macros",
        "icon": "$(refresh)"
      },
      {
        "command": "macros.new.macro",
        "title": "New Macro",
        "category": "Macros",
        "icon": "$(new-file)"
      },
      {
        "command": "macros.new.macroLibrary",
        "title": "Add Folder…",
        "category": "Macros",
        "icon": "$(new-folder)"
      },
      {
        "command": "macros.new.startupMacro",
        "title": "Set as Startup Macro",
        "category": "Macros"
      },
      {
        "command": "macros.new.macro.activeEditor",
        "title": "Fill File with Template",
        "category": "Macros",
        "enablement": "macros:supportedEditorLangId"
      },
      {
        "command": "macros.new.macro.repl",
        "title": "Create REPL",
        "icon": "$(repl)",
        "category": "Macros"
      },
      {
        "command": "macros.open",
        "title": "Open Macro…",
        "category": "Macros"
      },
      {
        "command": "macros.paste.file",
        "title": "Paste",
        "category": "Macros",
        "enablement": "macros:canPaste && focusedView == macros.macroExplorer"
      },
      {
        "command": "macros.rename.macro",
        "title": "Rename…",
        "category": "Macros",
        "enablement": "focusedView == macros.macroExplorer"
      },
      {
        "command": "macros.revealInExplorer",
        "title": "Reveal in File Explorer",
        "enablement": "!isWeb && isWindows && focusedView == macros.macroExplorer"
      },
      {
        "command": "macros.revealInFinder",
        "title": "Reveal in Finder",
        "enablement": "!remoteName && !isWeb && isMac && focusedView == macros.macroExplorer"
      },
      {
        "command": "macros.revealInFiles",
        "title": "Reveal in Files",
        "enablement": "!remoteName && !isWeb && isLinux && focusedView == macros.macroExplorer"
      },
      {
        "command": "macros.revealRelatedMacroInTree",
        "title": "Reveal in Macro Explorer",
        "enablement": "focusedView == macros.startupMacros && viewItem =~ /startupMacro/"
      },
      {
        "command": "macros.run",
        "title": "Run Macro",
        "category": "Macros",
        "icon": "$(debug-start)"
      },
      {
        "command": "macros.run.activeEditor",
        "title": "Run Active File as Macro",
        "category": "Macros",
        "enablement": "macros:supportedEditorLangId && (resourceScheme == untitled || macros:supportedEditorLangId)",
        "icon": "$(run-all)"
      },
      {
        "command": "macros.run.mru",
        "title": "Rerun Last Macro",
        "category": "Macros",
        "enablement": "macros:mruSet"
      },
      {
        "command": "macros.run.show",
        "title": "Show Running Macros",
        "category": "Macros"
      },
      {
        "command": "macros.runView",
        "title": "View Running Version",
        "category": "Macros",
        "enablement": "focusedView == macros.macroExplorer"
      },
      {
        "command": "macros.showMacroExplorer",
        "title": "Show Macro Explorer",
        "category": "Macros"
      },
      {
        "command": "macros.showStartupMacros",
        "title": "Show Startup Macros",
        "category": "Macros"
      },
      {
        "command": "macros.sourceDirectories.settings",
        "title": "Configure Source Directories",
        "category": "Macros",
        "icon": "$(settings-gear)"
      },
      {
        "command": "macros.sourceDirectories.setup",
        "title": "Setup Folder for Development",
        "category": "Macros"
      },
      {
        "command": "macros.startup.refresh",
        "title": "Refresh Startup Macros",
        "category": "Macros",
        "icon": "$(refresh)"
      },
      {
        "command": "macros.startup.settings",
        "title": "Configure Startup Macros",
        "category": "Macros",
        "icon": "$(settings-gear)"
      },
      {
        "command": "macros.stop",
        "title": "Request to Stop",
        "category": "Macros",
        "icon": "$(debug-stop)"
      }
    ],
    "configuration": [
      {
        "title": "Macros",
        "properties": {
          "macros.debug.breakOnStart": {
            "type": "boolean",
            "description": "Set a breakpoint on the macro file being debugged, if none is defined.",
            "default": true
          },
          "macros.sourceDirectories": {
            "type": "array",
            "markdownDescription": "Directories containing macro files (non-recursive). The following tokens are available:\n\n- `${userHome}`: User home directory.\n- `${workspaceFolder}`: Current workspace root directory.",
            "default": [],
            "items": {
              "type": "string",
              "minLength": 1,
              "pattern": "^[^\\s].+[^\\s]$"
            },
            "uniqueItems": true
          },
          "macros.sourceDirectoriesVerification": {
            "type": "boolean",
            "markdownDescription": "Ensure that the parent folder of the current macro editor is set up for development (e.g. `jsconfig.json`, `global.d.ts`).",
            "default": true
          },
          "macros.startupMacros": {
            "type": "array",
            "markdownDescription": "Macro **files** that run when VS Code starts or a workspace is opened. The following tokens are available:\n\n- `${userHome}`: User home directory.\n- `${workspaceFolder}`: Current workspace root directory.",
            "default": [],
            "items": {
              "type": "string",
              "minLength": 4,
              "pattern": ".+\\.(js|cjs|ts)$"
            },
            "uniqueItems": true
          },
          "macros.templateDefaultLanguage": {
            "type": "string",
            "default": "javascript",
            "enum": [
              "javascript",
              "typescript"
            ],
            "enumItemLabels": [
              "JavaScript",
              "TypeScript"
            ],
            "description": "Default language used when creating new macros."
          }
        }
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "macros.copy.file",
          "when": "false"
        },
        {
          "command": "macros.copy.name",
          "when": "false"
        },
        {
          "command": "macros.copy.path",
          "when": "false"
        },
        {
          "command": "macros.delete.macroOrMacroLibrary",
          "when": "false"
        },
        {
          "command": "macros.delete.startupMacro",
          "when": "false"
        },
        {
          "command": "macros.explorer.refresh",
          "when": "false"
        },
        {
          "command": "macros.new.startupMacro",
          "when": "false"
        },
        {
          "command": "macros.paste.file",
          "when": "false"
        },
        {
          "command": "macros.rename.macro",
          "when": "false"
        },
        {
          "command": "macros.revealInExplorer",
          "when": "false"
        },
        {
          "command": "macros.revealInFinder",
          "when": "false"
        },
        {
          "command": "macros.revealInFiles",
          "when": "false"
        },
        {
          "command": "macros.revealRelatedMacroInTree",
          "when": "false"
        },
        {
          "command": "macros.runView",
          "when": "false"
        },
        {
          "command": "macros.startup.refresh",
          "when": "false"
        },
        {
          "command": "macros.stop",
          "when": "false"
        }
      ],
      "editor/title": [
        {
          "command": "macros.debug.activeEditor",
          "group": "navigation",
          "when": "!inDebugMode && !macros:inDebugMode && resourceScheme == file && macros:supportedFeatureExt"
        },
        {
          "command": "macros.run.activeEditor",
          "group": "navigation",
          "when": "macros:supportedEditorLangId && (resourceScheme == untitled || macros:supportedFeatureExt)"
        }
      ],
      "view/item/context": [
        {
          "command": "macros.copy.file",
          "when": "view == macros.macroExplorer && viewItem =~ /macroFile/ && !(viewItem =~ /untitled/)",
          "group": "5_copy@1"
        },
        {
          "command": "macros.copy.name",
          "when": "view == macros.macroExplorer && viewItem =~ /macro(File|Library)/ && !(viewItem =~ /untitled/)",
          "group": "5_copy@3"
        },
        {
          "command": "macros.copy.path",
          "when": "view == macros.macroExplorer && viewItem =~ /macro(File|Library)/ && !(viewItem =~ /untitled/)",
          "group": "5_copy@2"
        },
        {
          "command": "macros.debug",
          "when": "view == macros.macroExplorer && viewItem =~ /macroFile/",
          "group": "1_execution@2"
        },
        {
          "command": "macros.delete.macroOrMacroLibrary",
          "when": "view == macros.macroExplorer && viewItem =~ /macro(File|Library)/ && !(viewItem =~ /untitled/)",
          "group": "5_other@2"
        },
        {
          "command": "macros.delete.startupMacro",
          "when": "viewItem =~ /startupMacro/",
          "group": "4_tools@2"
        },
        {
          "command": "macros.delete.startupMacro",
          "when": "view == macros.startupMacros && viewItem =~ /startupMacro/",
          "group": "inline"
        },
        {
          "command": "macros.new.macro",
          "when": "view == macros.macroExplorer && viewItem =~ /macroLibrary/",
          "group": "inline"
        },
        {
          "command": "macros.new.macro",
          "when": "view == macros.macroExplorer && viewItem =~ /macroLibrary/",
          "group": "2_creation@1"
        },
        {
          "command": "macros.new.startupMacro",
          "when": "view == macros.macroExplorer && viewItem =~ /macroFile/ && !(viewItem =~ /startup|untitled/)",
          "group": "4_tools@1"
        },
        {
          "command": "macros.paste.file",
          "when": "view == macros.macroExplorer && macros:canPaste && viewItem =~ /macroLibrary/ && !(viewItem =~ /untitled/)",
          "group": "5_copy@5"
        },
        {
          "command": "macros.rename.macro",
          "when": "view == macros.macroExplorer && viewItem =~ /macroFile/ && !(viewItem =~ /untitled/)",
          "group": "5_other@1"
        },
        {
          "command": "macros.revealRelatedMacroInTree",
          "when": "view == macros.startupMacros && viewItem =~ /startupMacro/",
          "group": "3_navigation@3"
        },
        {
          "command": "macros.revealInExplorer",
          "when": "!isWeb && isWindows && view == macros.macroExplorer && !(viewItem =~ /macroRun|startupLibrary|startupMacro|untitled/)",
          "group": "3_navigation@2"
        },
        {
          "command": "macros.revealInFinder",
          "when": "!remoteName && !isWeb && isMac && view == macros.macroExplorer && !(viewItem =~ /macroRun|startupLibrary|startupMacro|untitled/)",
          "group": "3_navigation@2"
        },
        {
          "command": "macros.revealInFiles",
          "when": "!remoteName && !isWeb && isLinux && view == macros.macroExplorer && !(viewItem =~ /macroRun|startupLibrary|startupMacro|untitled/)",
          "group": "3_navigation@2"
        },
        {
          "command": "macros.run",
          "when": "view == macros.macroExplorer && viewItem =~ /macroFile/",
          "group": "inline"
        },
        {
          "command": "macros.run",
          "when": "view == macros.macroExplorer && viewItem =~ /macroFile/",
          "group": "1_execution@1"
        },
        {
          "command": "macros.runView",
          "when": "view == macros.macroExplorer && (viewItem == macroRun)",
          "group": "3_other@1"
        },
        {
          "command": "macros.sourceDirectories.setup",
          "when": "view == macros.macroExplorer && viewItem =~ /macroLibrary/ && !(viewItem =~ /untitled/)",
          "group": "4_tools@1"
        },
        {
          "command": "macros.startup.settings",
          "when": "view == macros.startupMacros && viewItem =~ /startupLibrary/",
          "group": "4_tools@1"
        },
        {
          "command": "macros.startup.settings",
          "when": "view == macros.startupMacros && viewItem =~ /startupLibrary/",
          "group": "inline"
        },
        {
          "command": "macros.stop",
          "when": "(view == macros.macroExplorer || view == macros.startupMacros) && viewItem =~ /macroRun|running/",
          "group": "1_execution@3"
        },
        {
          "command": "macros.stop",
          "when": "(view == macros.macroExplorer || view == macros.startupMacros) && viewItem =~ /macroRun|running/",
          "group": "inline"
        }
      ],
      "view/title": [
        {
          "command": "macros.explorer.refresh",
          "when": "view == macros.macroExplorer",
          "group": "navigation@10"
        },
        {
          "command": "macros.new.macroLibrary",
          "when": "view == macros.macroExplorer",
          "group": "navigation@5"
        },
        {
          "command": "macros.new.macro.repl",
          "when": "view == macros.macroExplorer",
          "group": "navigation@1"
        },
        {
          "command": "macros.startup.refresh",
          "when": "view == macros.startupMacros",
          "group": "navigation@1"
        }
      ]
    },
    "views": {
      "macrosView": [
        {
          "id": "macros.macroExplorer",
          "name": "Macro Explorer",
          "type": "tree",
          "icon": "resources/images/macros.svg"
        },
        {
          "id": "macros.startupMacros",
          "name": "Startup Macros",
          "type": "tree",
          "icon": "resources/images/macros.svg",
          "visibility": "collapsed"
        },
        {
          "id": "macrosView.treeview1",
          "name": "Treeview 1",
          "type": "tree",
          "icon": "$(list-tree)",
          "when": "macrosView.treeview1.show"
        },
        {
          "id": "macrosView.treeview2",
          "name": "Treeview 2",
          "type": "tree",
          "icon": "$(list-tree)",
          "when": "macrosView.treeview2.show"
        },
        {
          "id": "macrosView.treeview3",
          "name": "Treeview 3",
          "type": "tree",
          "icon": "$(list-tree)",
          "when": "macrosView.treeview3.show"
        },
        {
          "id": "macrosView.treeview4",
          "name": "Treeview 4",
          "type": "tree",
          "icon": "$(list-tree)",
          "when": "macrosView.treeview4.show"
        },
        {
          "id": "macrosView.treeview5",
          "name": "Treeview 5",
          "type": "tree",
          "icon": "$(list-tree)",
          "when": "macrosView.treeview5.show"
        },
        {
          "id": "macrosView.webview1",
          "name": "Webview 1",
          "type": "webview",
          "icon": "$(window)",
          "when": "macrosView.webview1.show"
        },
        {
          "id": "macrosView.webview2",
          "name": "Webview 2",
          "type": "webview",
          "icon": "$(window)",
          "when": "macrosView.webview2.show"
        },
        {
          "id": "macrosView.webview3",
          "name": "Webview 3",
          "type": "webview",
          "icon": "$(window)",
          "when": "macrosView.webview3.show"
        },
        {
          "id": "macrosView.webview4",
          "name": "Webview 4",
          "type": "webview",
          "icon": "$(window)",
          "when": "macrosView.webview4.show"
        },
        {
          "id": "macrosView.webview5",
          "name": "Webview 5",
          "type": "webview",
          "icon": "$(window)",
          "when": "macrosView.webview5.show"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "macrosView",
          "title": "Macros",
          "icon": "resources/images/macros.svg"
        }
      ]
    },
    "keybindings": [
      {
        "command": "macros.copy.file",
        "key": "Ctrl+C",
        "mac": "Cmd+C",
        "when": "focusedView == macros.macroExplorer && !inputFocus"
      },
      {
        "command": "macros.copy.path",
        "key": "Shift+Alt+C",
        "mac": "Cmd+Opt+C",
        "when": "focusedView == macros.macroExplorer && !inputFocus"
      },
      {
        "command": "macros.delete.macroOrMacroLibrary",
        "key": "Delete",
        "mac": "Cmd+Backspace",
        "when": "focusedView == macros.macroExplorer && !inputFocus"
      },
      {
        "command": "macros.paste.file",
        "key": "Ctrl+V",
        "mac": "Cmd+V",
        "when": "focusedView == macros.macroExplorer && !inputFocus && macros:canPaste"
      },
      {
        "command": "macros.rename.macro",
        "key": "F2",
        "mac": "Enter",
        "when": "focusedView == macros.macroExplorer && !inputFocus"
      },
      {
        "command": "macros.revealInExplorer",
        "key": "Shift+Alt+R",
        "when": "focusedView == macros.macroExplorer && !inputFocus"
      },
      {
        "command": "macros.revealInFinder",
        "key": "Cmd+Opt+R",
        "when": "focusedView == macros.macroExplorer && !inputFocus"
      }
    ],
    "chatParticipants": [
      {
        "id": "macros.chatParticipant",
        "fullName": "Macros",
        "name": "macros",
        "description": "How can I assist you with macros?",
        "isSticky": true,
        "commands": [
          {
            "name": "create",
            "description": "Generate a macro content using templates"
          }
        ]
      }
    ],
    "languageModelTools": [
      {
        "name": "create_macro",
        "tags": [
          "macro",
          "create",
          "run"
        ],
        "displayName": "Create a macro",
        "modelDescription": "Creates an untitled macro using the `content` and `language` arguments. By default, the macro is only created and not executed. Set `run` to true when the user intent is immediate execution (e.g., 'run this macro', 'execute now', 'do this now', 'test it'). If the user only asks to generate or write code, or if execution is deferred (e.g., 'run later', 'make it work automatically'), leave `run` as false.",
        "inputSchema": {
          "type": "object",
          "required": [
            "content",
            "language"
          ],
          "properties": {
            "content": {
              "type": "string",
              "description": "The source code of the macro to be created. If left empty, a template selection dropdown will be shown but list of available templates is limited."
            },
            "language": {
              "type": "string",
              "description": "Language of the macro content. Must be 'javascript' or 'typescript'.",
              "enum": [
                "javascript",
                "typescript"
              ]
            },
            "run": {
              "type": "boolean",
              "default": false,
              "description": "Execute macro after creating it. Defaults to `false`."
            }
          }
        }
      }
    ]
  },
  "scripts": {
    "compile": "npm run compile:check-types && node esbuild.mjs",
    "compile:check-types": "tsc --noEmit",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "watch": "tsc -w -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "package": "npm run compile:check-types && node esbuild.mjs --production",
    "vsce-package": "vsce package",
    "vscode:prepublish": "npm run package"
  },
  "dependencies": {
    "source-map-support": "^0.5.21",
    "typescript": "^5.x"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.0",
    "@stylistic/eslint-plugin": "^5.2.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.18.0",
    "@types/source-map-support": "^0.5.10",
    "@types/vscode": "~1.99",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vscode/test-electron": "^2.5.0",
    "@vscode/vsce": "^3.5.0",
    "esbuild": "^0.25.0",
    "eslint": "^9.30.0",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "glob": "^11.1.0",
    "mocha": "^11.0.0",
    "prettier": "^3.6.2",
    "source-map-support": "^0.5.21",
    "typescript": "^5.9.0",
    "typescript-eslint": "^8.35.0"
  },
  "overrides": {

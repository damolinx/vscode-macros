{
  "name": "damolinx-macros",
  "displayName": "Macros for VS Code",
  "description": "Automate workflows and prototype extension features with JavaScript and TypeScript macros—no full extension required, full access to VS Code’s API.",
  "version": "0.5.0",
  "publisher": "damolinx",
  "icon": "resources/images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/damolinx/vscode-macros"
  },
  "bugs": {
    "url": "https://github.com/damolinx/vscode-macros/issues"
  },
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "automate",
    "custom editor",
    "custom view",
    "explorer",
    "extension",
    "javascript",
    "macro",
    "macros",
    "productivity",
    "prototyping",
    "sandbox",
    "script",
    "sidebar",
    "tooling",
    "treeview",
    "typescript",
    "webview"
  ],
  "extensionKind": [
    "workspace"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "colors": [
      {
        "id": "macros.general",
        "description": "Color for general icons",
        "defaults": {
          "dark": "#6d8086",
          "light": "#6d8086",
          "highContrast": "#b0b0b0"
        }
      },
      {
        "id": "macros.js",
        "description": "Color for JavaScript icons",
        "defaults": {
          "dark": "#d4b830",
          "light": "#d4b830",
          "highContrast": "#ffea00"
        }
      },
      {
        "id": "macros.macrojs",
        "description": "Color for JavaScript macro icons",
        "defaults": {
          "dark": "#e6c94a",
          "light": "#e6c94a",
          "highContrast": "#fff200"
        }
      },
      {
        "id": "macros.ts",
        "description": "Color for TypeScript icons",
        "defaults": {
          "dark": "#519aba",
          "light": "#519aba",
          "highContrast": "#00bfff"
        }
      },
      {
        "id": "macros.macrots",
        "description": "Color for TypeScript macro icons",
        "defaults": {
          "dark": "#6fb0d4",
          "light": "#6fb0d4",
          "highContrast": "#5fd0ff"
        }
      }
    ],
    "commands": [
      {
        "command": "macros.debug",
        "title": "Debug Macro",
        "category": "Macros",
        "enablement": "!inDebugMode && !macros:inDebugMode",
        "icon": "$(debug-alt)"
      },
      {
        "command": "macros.debug.activeEditor",
        "title": "Debug Active Editor as a Macro",
        "category": "Macros",
        "enablement": "!inDebugMode && !macros:inDebugMode && resourceScheme == file && macros:supportedEditorLangId",
        "icon": "$(debug-alt)"
      },
      {
        "command": "macros.delete",
        "title": "Delete",
        "category": "Macros",
        "enablement": "focusedView == macros.macroExplorer"
      },
      {
        "command": "macros.new.macro",
        "title": "New Macro",
        "category": "Macros",
        "icon": "$(add)"
      },
      {
        "command": "macros.new.macro.activeEditor",
        "title": "Fill File with Template",
        "category": "Macros",
        "when": "macros:supportedEditorLangId"
      },
      {
        "command": "macros.new.macro.repl",
        "title": "New REPL",
        "category": "Macros"
      },
      {
        "command": "macros.open",
        "title": "Open Macro…",
        "category": "Macros"
      },
      {
        "command": "macros.revealInExplorer",
        "title": "Reveal in File Explorer",
        "enablement": "!isWeb && isWindows"
      },
      {
        "command": "macros.revealInFinder",
        "title": "Reveal in Finder",
        "enablement": "!remoteName && !isWeb && isMac"
      },
      {
        "command": "macros.revealInFiles",
        "title": "Reveal in Files",
        "enablement": "!remoteName && !isWeb && isLinux"
      },
      {
        "command": "macros.run",
        "title": "Run Macro",
        "category": "Macros",
        "icon": "$(debug-start)"
      },
      {
        "command": "macros.run.activeEditor",
        "title": "Run Active File as a Macro",
        "category": "Macros",
        "enablement": "macros:supportedEditorLangId && (resourceScheme == untitled || macros:supportedEditorLangId)",
        "icon": "$(run-all)"
      },
      {
        "command": "macros.run.mru",
        "title": "Rerun Last Macro",
        "category": "Macros",
        "enablement": "macros:mruSet"
      },
      {
        "command": "macros.run.show",
        "title": "Show Running Macros",
        "category": "Macros"
      },
      {
        "command": "macros.showMacroExplorer",
        "title": "Show Macro Explorer",
        "category": "Macros"
      },
      {
        "command": "macros.sourceDirectories.settings",
        "title": "Configure Source Directories",
        "category": "Macros",
        "icon": "$(settings)"
      },
      {
        "command": "macros.sourceDirectories.setup",
        "title": "Setup Source Directory for Development",
        "category": "Macros"
      },
      {
        "command": "macros.stop",
        "title": "Request to Stop",
        "category": "Macros",
        "icon": "$(debug-stop)"
      }
    ],
    "configuration": [
      {
        "title": "Macros",
        "properties": {
          "macros.debug.breakOnStart": {
            "type": "boolean",
            "description": "Set a breakpoint on the macro file being debugged, if none is defined.",
            "default": true
          },
          "macros.sourceDirectories": {
            "type": "array",
            "markdownDescription": "Directories containing macro files (non-recursive). The following tokens are available:\n\n- `${userHome}`: User home directory.\n- `${workspaceFolder}`: Current workspace root directory.",
            "default": [],
            "items": {
              "type": "string",
              "minLength": 1,
              "pattern": "^[^\\s].+[^\\s]$"
            },
            "uniqueItems": true
          },
          "macros.sourceDirectoriesVerification": {
            "type": "boolean",
            "markdownDescription": "Automatically verify that the parent folder of the current macro editor is set up for development (e.g. `jsconfig.json`, `global.d.ts`).",
            "default": true
          },
          "macros.startupMacros": {
            "type": "array",
            "markdownDescription": "Macro **files** that run when VS Code starts or a workspace is opened. The following tokens are available:\n\n- `${userHome}`: User home directory.\n- `${workspaceFolder}`: Current workspace root directory.",
            "default": [],
            "items": {
              "type": "string",
              "minLength": 4,
              "pattern": ".+(\\.macro)?\\.c?js$"
            },
            "uniqueItems": true
          }
        }
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "macros.delete",
          "when": "false"
        },
        {
          "command": "macros.revealInExplorer",
          "when": "false"
        },
        {
          "command": "macros.revealInFinder",
          "when": "false"
        },
        {
          "command": "macros.revealInFiles",
          "when": "false"
        },
        {
          "command": "macros.stop",
          "when": "false"
        }
      ],
      "editor/title": [
        {
          "command": "macros.debug.activeEditor",
          "group": "navigation",
          "when": "!inDebugMode && !macros:inDebugMode && resourceScheme == file && macros:supportedFeatureExt"
        },
        {
          "command": "macros.run.activeEditor",
          "group": "navigation",
          "when": "macros:supportedEditorLangId && (resourceScheme == untitled || macros:supportedFeatureExt)"
        }
      ],
      "view/item/context": [
        {
          "command": "macros.debug",
          "when": "view == macros.macroExplorer && viewItem =~ /macroFile/",
          "group": "1_execution@2"
        },
        {
          "command": "macros.delete",
          "when": "view == macros.macroExplorer && viewItem =~ /macroFile/ && !(viewItem =~ /untitled/)",
          "group": "5_other@1"
        },
        {
          "command": "macros.new.macro",
          "when": "view == macros.macroExplorer && viewItem =~ /macroLibrary/",
          "group": "inline"
        },
        {
          "command": "macros.new.macro",
          "when": "view == macros.macroExplorer && viewItem =~ /macroLibrary/",
          "group": "3_navigation@1"
        },
        {
          "command": "macros.revealInExplorer",
          "when": "!isWeb && isWindows && view == macros.macroExplorer && viewItem != macroRun && !(viewItem =~ /untitled/)",
          "group": "3_navigation@2"
        },
        {
          "command": "macros.revealInFinder",
          "when": "!remoteName && !isWeb && isMac && view == macros.macroExplorer && viewItem != macroRun && !(viewItem =~ /untitled/)",
          "group": "3_navigation@2"
        },
        {
          "command": "macros.revealInFiles",
          "when": "!remoteName && !isWeb && isLinux && view == macros.macroExplorer && viewItem != macroRun && !(viewItem =~ /untitled/)",
          "group": "3_navigation@2"
        },
        {
          "command": "macros.run",
          "when": "view == macros.macroExplorer && viewItem =~ /macroFile/",
          "group": "inline"
        },
        {
          "command": "macros.run",
          "when": "view == macros.macroExplorer && viewItem =~ /macroFile/",
          "group": "1_execution@1"
        },
        {
          "command": "macros.sourceDirectories.setup",
          "when": "view == macros.macroExplorer && viewItem =~ /macroLibrary/ && !(viewItem =~ /untitled/)",
          "group": "5_other@1"
        },
        {
          "command": "macros.stop",
          "when": "view == macros.macroExplorer && (viewItem == macroRun || viewItem =~ /running/)",
          "group": "1_execution@3"
        },
        {
          "command": "macros.stop",
          "when": "view == macros.macroExplorer && (viewItem == macroRun || viewItem =~ /running/)",
          "group": "inline"
        }
      ],
      "view/title": [
        {
          "command": "macros.new.macro.repl",
          "when": "view == macros.macroExplorer",
          "group": "1_tools"
        },
        {
          "command": "macros.sourceDirectories.settings",
          "when": "view == macros.macroExplorer",
          "group": "9_settings"
        }
      ]
    },
    "views": {
      "macrosView": [
        {
          "id": "macros.macroExplorer",
          "name": "Macro Explorer",
          "type": "tree",
          "icon": "$(run-all)"
        },
        {
          "id": "macrosView.treeview1",
          "name": "Treeview 1",
          "type": "tree",
          "icon": "$(list-tree)",
          "when": "macrosView.treeview1.show"
        },
        {
          "id": "macrosView.treeview2",
          "name": "Treeview 2",
          "type": "tree",
          "icon": "$(list-tree)",
          "when": "macrosView.treeview2.show"
        },
        {
          "id": "macrosView.treeview3",
          "name": "Treeview 3",
          "type": "tree",
          "icon": "$(list-tree)",
          "when": "macrosView.treeview3.show"
        },
        {
          "id": "macrosView.webview1",
          "name": "Webview 1",
          "type": "webview",
          "icon": "$(window)",
          "when": "macrosView.webview1.show"
        },
        {
          "id": "macrosView.webview2",
          "name": "Webview 2",
          "type": "webview",
          "icon": "$(window)",
          "when": "macrosView.webview2.show"
        },
        {
          "id": "macrosView.webview3",
          "name": "Webview 3",
          "type": "webview",
          "icon": "$(window)",
          "when": "macrosView.webview3.show"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "macrosView",
          "title": "Macros",
          "icon": "$(run-all)"
        }
      ]
    },
    "chatParticipants": [
      {
        "id": "macros.chatParticipant",
        "fullName": "Macros",
        "name": "macros",
        "description": "How can I assist you with macros?",
        "isSticky": true,
        "commands": [
          {
            "name": "create",
            "description": "Generate a macro content using templates"
          }
        ]
      }
    ]
  },
  "scripts": {
    "compile": "npm run compile:check-types && node esbuild.mjs",
    "compile:check-types": "tsc --noEmit",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "watch": "tsc -w -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "package": "npm run compile:check-types && node esbuild.mjs --production",
    "vsce-package": "vsce package",
    "vscode:prepublish": "npm run package"
  },
  "dependencies": {
    "typescript": "^5.x"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.0",
    "@stylistic/eslint-plugin": "^5.2.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.18.0",
    "@types/vscode": "~1.99",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vscode/test-electron": "^2.5.0",
    "@vscode/vsce": "^3.5.0",
    "esbuild": "^0.25.0",
    "eslint": "^9.30.0",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "glob": "^11.0.0",
    "mocha": "^11.0.0",
    "prettier": "^3.6.2",
    "source-map-support": "^0.5.21",
    "typescript": "^5.8.0",
    "typescript-eslint": "^8.35.0"
  }
}